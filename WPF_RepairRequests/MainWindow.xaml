<Window x:Class="WPF_RepairRequests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_RepairRequests"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1100" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="#FF283442" >

            <Button x:Name="requestsBtn" Content="Запросы на ремонт" 
                    FontSize="18" Height="40" Background="Transparent"
                    BorderBrush="Transparent" Click="requestsBtn_Click" 
                    FontWeight="Bold" Foreground="AliceBlue"/>

            <Button x:Name="employeesBtn" Content="Сотрудники" 
                    FontSize="18" Height="40" Background="Transparent" 
                    BorderBrush="Transparent" Click="employeesBtn_Click" 
                    FontWeight="Bold" Foreground="AliceBlue"/>
            
        </StackPanel>
        <ContentControl x:Name="contentCTRL" Grid.Column="1"/>
    </Grid>
</Window>
